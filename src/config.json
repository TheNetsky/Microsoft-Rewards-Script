{
    "baseURL": "https://rewards.bing.com",
    "sessionPath": "sessions",
    
    "browser": {
        "headless": false,
        "globalTimeout": "30s"
    },
    
    "execution": {
        "parallel": false,
        "runOnZeroPoints": false,
        "clusters": 1,
        "passesPerRun": 1
    },
    
    "buyMode": {
        "maxMinutes": 45
    },
    
    "fingerprinting": {
        "saveFingerprint": {
            "mobile": false,
            "desktop": false
        }
    },
    
    "search": {
        "useLocalQueries": false,
        "settings": {
            "useGeoLocaleQueries": false,
            "scrollRandomResults": true,
            "clickRandomResults": true,
            "retryMobileSearchAmount": 2,
            "delay": {
                "min": "3min",
                "max": "5min"
            }
        }
    },
    
    "humanization": {
        "actionDelay": { 
            "min": 150, 
            "max": 450 
        },
        "gestureMoveProb": 0.4,
        "gestureScrollProb": 0.2,
        "allowedWindows": []
    },
    
    "retryPolicy": {
        "maxAttempts": 3,
        "baseDelay": 1000,
        "maxDelay": "30s",
        "multiplier": 2,
        "jitter": 0.2
    },
    
    "workers": {
        "doDailySet": true,
        "doMorePromotions": true,
        "doPunchCards": true,
        "doDesktopSearch": true,
        "doMobileSearch": true,
        "doDailyCheckIn": true,
        "doReadToEarn": true,
        "bundleDailySetWithSearch": false
    },
    
    "proxy": {
        "proxyGoogleTrends": true,
        "proxyBingTerms": true
    },
    
    "notifications": {
        "webhook": {
            "enabled": false,
            "url": ""
        },
        "conclusionWebhook": {
            "enabled": false,
            "url": ""
        },
        "ntfy": {
            "enabled": false,
            "url": "",
            "topic": "rewards",
            "authToken": ""
        }
    },
    
    "logging": {
        "excludeFunc": [
            "SEARCH-CLOSE-TABS",
            "LOGIN-NO-PROMPT",
            "FLOW"
        ],
        "webhookExcludeFunc": [
            "SEARCH-CLOSE-TABS",
            "LOGIN-NO-PROMPT",
            "FLOW"
        ]
    },
    
    "diagnostics": {
        "enabled": true,
        "saveScreenshot": true,
        "saveHtml": true,
        "maxPerRun": 2,
        "retentionDays": 7
    },
    
    "communityHelp": {
        "enabled": true,
        "minIntervalMs": 10000
    },
    
    "jobState": {
        "enabled": true,
        "dir": ""
    },
    
    "schedule": {
        "enabled": false,
        "time": "09:00",
        "timeZone": "America/New_York",
        "runImmediatelyOnStart": true
    },
    
    "update": {
        "git": true,
        "docker": false,
        "scriptPath": "setup/update/update.mjs"
    }
}